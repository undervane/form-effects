{
  "include": [
      "src/**/*",
      "index.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.test.ts",
      "**/*.spec.ts",
      "example"
  ],
  "compilerOptions": {
      "lib": [
          "es6",
          "dom"
      ],
      "declaration": true,
      "target": "es5",
      "pretty": true,
      "module": "commonjs",
      "outDir": "./lib",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": false,
      "typeRoots": [
          "node_modules/@types"
      ],
  }
}